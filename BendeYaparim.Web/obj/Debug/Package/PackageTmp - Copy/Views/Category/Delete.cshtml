@model BendeYaparim.Web.Models.Category

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Category</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Level</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Level).ToString()</div>

    <div class="display-label">Parent</div>
    <div class="display-field">@(Model.Parent == null ? "None" : Model.Parent.Name)</div>

    <div class="display-label">Children</div>
    <div class="display-field">@(Model.Children == null ? "None" : Model.Children.Count.ToString())</div>

    <div class="display-label">JobSeeks</div>
    <div class="display-field">@(Model.JobSeeks == null ? "None" : Model.JobSeeks.Count.ToString())</div>

    <div class="display-label">JobOffers</div>
    <div class="display-field">@(Model.JobOffers == null ? "None" : Model.JobOffers.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


