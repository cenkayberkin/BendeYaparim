@model BendeYaparim.Web.Models.LogOnModel
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<table cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <!-- ikincil sol alan başlangıç -->
        <td class="left_side" valign="top">

            @Html.ValidationSummary(true, "Giriş başarısız oldu, lütfen hataları düzeltip tekrar deneyiniz.", new { @class = "uyari_kirmizi" })
            
            @using (Html.BeginForm())
            {
                <span class="tarih_bg">Üye Girişi</span>
                <div class="clear">
                </div>
        
                <div class="mleft20">
                    Lütfen kullanıcı adınızla şifrenizi giriniz. Eğer hesabınız yoksa burdan kayıt olabilirsiniz.
                    <a href="@Url.Action("Register")" class="turkuaz">Yeni kullanıcı için Kayıt</a>.
                    <div class="clear">
                    </div>
                    <div class="hr2">
                    </div>
                    <span class="w100 left" style="display: block;">Kullanıcı Adı :</span> @Html.TextBoxFor(m => m.UserName, new { @class = "input left" })  
                    @Html.ValidationMessageFor(m => m.UserName,"Kullanıcı Adı gerekli.")
                    <div class="clear">
                    </div>
                    <span class="w100 left" style="display: block;">Şifre :</span> @Html.PasswordFor(m => m.Password, new { @class = "input left" })
                    @Html.ValidationMessageFor(m => m.Password,"Şifre gerekli.")
                    <div class="clear">
                    </div>
                    <span class="w100 left" style="display: block;">&nbsp;</span><label class="left">@Html.CheckBoxFor(m => m.RememberMe)
                        Beni hatırla ?</label>
                    <div class="clear">
                    </div>
                    <span class="w100 left" style="display: block;">&nbsp;</span><input type="submit"
                        value="GİRİŞ" class="myBtn2" />
                    <div class="clear">
                    </div>
                </div>
            }
        </td>
        <!-- sol alan bitiş -->
        <!-- sağ alan başlangıç -->
        <td class="right_side" valign="top">
            <p>
                <center><img src="../../Content/images/menubanner.png" /></center>
            </p>
        </td>
        <!-- sağ alan bitiş -->
    </tr>
</table>
