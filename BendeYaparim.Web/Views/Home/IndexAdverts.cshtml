@model IEnumerable<BendeYaparim.Web.Models.JobSeek>
<img src="../../Content/images/titles/enyeni.png" /><br />
<br />
<!-- en yeni bende yaparım diyenler -->
@foreach (var item in Model)
{
    <!-- row 1 -->
    <div class="mleft20">
        <span class="tarih_bg">@item.CreateDate</span> <a href="@Url.Action("Profile", "User", new { Id = item.Owner.UserId }, null)" class="author_bg">@item.Owner.UserName</a>
        <div class="clear">
        </div>
        <div class="mleft20 left_shadow">
            <br />
            <div class="mleft20">
                <span class="@string.Format("icon_link {0}", item.Category.HtmlClassName)"><span
                    class="t2b turkuaz">@item.City.Name</span> <span class="t2b">' @BendeYaparim.Web.Infrastructure.HtmlHelpers.MyHtmlHelper.CityNameExtension(item.City.NameExtension)
                        @BendeYaparim.Web.Infrastructure.HtmlHelpers.MyHtmlHelper.PricePeriodStr(item.PricePeriod)
                    </span><span class="t2b orange">@item.Price TL </span><span class="t2b">'ye </span>
                    <a href="@Url.Action("Index", "JobSeek", new { CategoryId = item.Category.Id, CategoryName = BendeYaparim.Web.CategoryNameConverterToUrl.ToFriendlyUrl(item.Category.Name) })"
                    class="t2b turkuaz">@item.Category.Name </a><span class="t2b">veriyorum.</span>
                </span>
                <p class="mleft40 pright20">
                    @BendeYaparim.Web.Infrastructure.HtmlHelpers.MyHtmlHelper.AdvertContent(item.ContentBody)
                </p>
                <a href="@Url.Action("Profile", "User", new { Id = item.Owner.UserId }, null)" class="myBtn mleft40">
                    bi bakayım!</a>
                <div class="clear">
                </div>
                <div class="hr2">
                </div>
            </div>
        </div>
    </div>
}