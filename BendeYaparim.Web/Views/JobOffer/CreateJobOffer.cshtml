@model BendeYaparim.Web.Models.JobOffer
@{
    BendeYaparim.Web.Models.Category c = ViewBag.Category;
    int catId = ViewBag.CatID;
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.NobleCount.min.js")" type="text/javascript"></script>
<script type="text/javascript">

    jQuery(function ($) {
        $('#ContentBody').NobleCount('#CharacterLeft', {
            max_chars: 800,
            on_negative: 'go_red',
            on_positive: 'go_green',
            block_negative: true
        });
    });

</script>
<table cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <!-- ikincil sol alan başlangıç -->
        <td class="left_side" valign="top">
           <span class="myTitle">Eleman bulmak için ilan ver.</span>
            <div class="clear"></div>
            
            <br />
            <!-- kategori -->
            @using (Html.BeginForm("CreateJobOffer", "JobOffer", new { CatId = catId }))
            {
                @Html.ValidationSummary(true, "Girdiğiniz bilgilerde hata var, Lütfen düzeltiniz.") 
                @Html.ValidationMessageFor(m => m.CityId)
                @Html.ValidationMessageFor(m => m.PricePeriod)
                @Html.ValidationMessageFor(m => m.Price)
                @Html.ValidationMessageFor(a => a.ContentBody)
                <div class="mleft20">
                    <span class="@string.Format("icon_link {0} left", c.Parent.HtmlClassName)">@c.Parent.Name</span>
                    <span class="left mleft10 mright10 t2">|</span> <span class="@string.Format("icon_link {0} left", c.HtmlClassName)">
                        @c.Name</span>
                    <div class="clear">
                    </div>
                    <div class="hr2">
                    </div>
                    @Html.DropDownListFor(a => a.CityId, (IEnumerable<SelectListItem>)ViewBag.Cities, new { @class = "input" })
                    <strong>şehrinde</strong>
                    @Html.DropDownListFor(a => a.PricePeriod, (IEnumerable<SelectListItem>)ViewBag.Period, new { @class = "input" })
                    @Html.TextBoxFor(a => a.Price, new { @class = "input", @style = "width:25px;" })
                    <strong><span class="orange">TL</span>'ye <span class="turkuaz">@c.Name</span></strong>
                    veren arıyorum.<br />
                    <br />
                    <span class="orange"><strong>>></strong></span> Fiyat belirlemek istemiyorsan fiyat
                    alanına (0) sıfır gir.<br />
                    <span class="orange"><strong>>></strong></span> Aradığın eleman özelliklerini açıkla.<br />
                    @Html.EditorFor(a => a.ContentBody)
                    <br />
                    <span id="CharacterLeft" style="width: 25px;"></span>karakterin kaldı.<br />
                    <input type="submit" value="GÖNDER" class="myBtn2 right" />
                </div>
            }
        </td>
        <!-- sol alan bitiş -->
        <!-- sağ alan başlangıç -->
        <td class="right_side" valign="top">
            <img src="../../Content/images/titles/enihtiyac.png" />
            <p class="SubCont turkuaz">
                <a href="#" class="t1">İngilizce tercümanlık</a> | <a href="#" class="t2">Web Sitesi
                    tasarımı</a> | <a href="#" class="t4">Ev temizliği</a> | <a href="#" class="t1">Matematik
                        dersi (ilk öğretim)</a> | <a href="#" class="t2">Broşür / katalog tasarım yapımı</a>
                | <a href="#" class="t2">İngilizce dersi</a> | <a href="#" class="t1">Bilgisayar / Ev
                    ağı / İnternet kurulum ve bakım desteği</a> | <a href="#" class="t4">Kitap okuma hizmeti</a>
                | <a href="#" class="t2">Çocuk bakıcılığı</a> | <a href="#" class="t2">Şoförlük</a>
