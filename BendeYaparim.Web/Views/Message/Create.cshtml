@model BendeYaparim.Web.Models.Message
@{
    ViewBag.Title = "Create";
}
<h2>
    Create</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<table cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <!-- ikincil sol alan baþlangýç -->
        <td class="left_side" valign="top">
            @using (Html.BeginForm("Create", "Message", new { RecepientUserID = ViewBag.RecepientUserID }))
            {
                @Html.ValidationSummary(true)
                @Html.ValidationMessageFor(model => model.ContentBody)
                <span class="mavialan_bg">Baþvuru</span>    
                @Html.TextAreaFor(model => model.ContentBody, new { @class = "left mleft10", @style = "width: 300px;" })
                <input type="submit" value="GÖNDER" class="myBtn2 mleft10" style="margin-top: 55px;" />
                <div class="clear">
                </div>
            }
        </td>
        <!-- sol alan bitiþ -->
        <!-- sað alan baþlangýç -->
        <td class="right_side" valign="top">
        </td>
        <!-- sað alan bitiþ -->
    </tr>
</table>
