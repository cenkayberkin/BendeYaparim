@model BendeYaparim.Web.SendMessageToAdmin
<table cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <!-- ikincil sol alan başlangıç -->
        <td class="left_side" valign="top">
            @using (Html.BeginForm())
            {
                <img src="../../Content/images/titles/ilankategorisioner.png" />
                <br />
                <span class="mavialan_bg">Önerilen ilan başlığı</span>
                @Html.TextBoxFor(a => a.Title, new { @class = "input left mleft10", @style = "width: 300px;" })
                <div class="clear">
                </div>
                <span class="mavialan_bg">Kısa açıklama</span>
                @Html.TextAreaFor(a => a.Content, new { @style = "width: 300px;", @rows = "6", @class = "left mleft10" })
                <input type="submit" value="GÖNDER" class="myBtn2 mleft10" style="margin-top: 55px;" />
                <div class="clear">
                </div>
            }
        </td>
        <!-- sol alan bitiş -->
        <!-- sağ alan başlangıç -->
        <td class="right_side" valign="top">
            <p class="SubCont">
                <center>
                    <img src="images/banner.png" /></center>
            </p>
        </td>
        <!-- sağ alan bitiş -->
    </tr>
</table>
